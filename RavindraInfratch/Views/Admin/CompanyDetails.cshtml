@model RavindraInfratch.Models.AdminCompanyDetails;
@{
	ViewBag.Title = "Admin Dashboard | Ravindra Infratech";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<section class="body">

	<!-- start: header -->
	<header class="header">
		@* <uc1:AdminHeader ID="AdminHeader1" runat="server" /> *@
		@Html.Partial("_AdminHeader")
		<!-- start: search & user box -->
		<!-- end: search & user box -->
	</header>
	<!-- end: header -->

	<div class="inner-wrapper">
		<!-- start: sidebar -->
		@* @{
		Html.RenderPartial("_AdminMenu");
		} *@
		@Html.Partial("_AdminMenu")
		<!-- end: sidebar -->

		<section role="main" class="content-body">
			@{
				if (TempData["AlertMessage"] != null)
				{
					<div class="alert alert-success alert-dismissible face show mb-0" role="alert">
						@TempData["AlertMessage"]
						<button type="button" class="close" data-dismiss="alert" aria-label="Close">
							<span aria-hidden="true">&times;</span>
						</button>
					</div>
				}

			}
			@* <header class="page-header">
				<h2>Admin</h2>


			</header> *@

			<!-- start: page -->
			<form method="post" >
			<div class="row">
				<div class="col-lg-6">
					<section class="card form-wizard" id="w1">
						<header class="card-header">
							<div class="card-actions">
								<a href="#" class="card-action card-action-toggle" data-card-toggle></a>
								<a href="#" class="card-action card-action-dismiss" data-card-dismiss></a>
							</div>

							<h2 class="card-title">Company Registration</h2>
						</header>
						<div class="card-body card-body-nopadding">

							<div class="form-horizontal" novalidate="novalidate">
								<div>
									<div id="w1-account" class="tab-pane p-3 ">
										<div class="form-group row">
											<label class="col-sm-3 control-label text-sm-right pt-1" for="w1-email">Company Name</label>
											<div class="col-sm-9">
												<div class="col-lg-12">
													<div class="input-group">
														<span class="input-group-prepend">
															<span class="input-group-text">
																<i class="fas fa-user"></i>
															</span>
														</span>
															<input type="text" asp-for="CompanyName"  class="form-control" required />
														

													</div>
												</div>
											</div>
										</div>

										<div class="form-group row">
											<label class="col-sm-3 control-label text-sm-right pt-1" for="w1-username">Mobile No.</label>
											<div class="col-sm-9">

												<div class="col-lg-12">
													<div class="input-group">
														<span class="input-group-prepend">
															<span class="input-group-text">
																<i class="fas fa-phone"></i>
															</span>
														</span>
															<input type="text" asp-for="CompanyPhone" class="form-control" required />
														

													</div>
												</div>
											</div>
										</div>
										<div class="form-group row">
											<label class="col-sm-3 control-label text-sm-right pt-1" for="w1-email">Email</label>
											<div class="col-sm-9">
												<div class="col-lg-12">
													<div class="input-group">
														<span class="input-group-prepend">
															<span class="input-group-text">
																<i class="fas fa-envelope"></i>
															</span>
														</span>
															<input type="text" asp-for="CompanyEmailId" class="form-control"  />
													</div>
												</div>
											</div>
										</div>




										<div class="form-group row">
											<label class="col-sm-3 control-label text-sm-right pt-1" for="w1-email">Address</label>
											<div class="col-sm-9">
												<div class="col-lg-12">
													<div class="input-group">
														<span class="input-group-prepend">
															<span class="input-group-text">
																<i class="fas fa-location-dot"></i>
															</span>
														</span>
															<textarea type="text" asp-for="CompanyAddress" rows="3" class="form-control" data-plugin-textarea-autosize></textarea>
														


													</div>
												</div>
											</div>
										</div>
										<div class="form-group row">
											<label class="col-sm-3 control-label text-sm-right pt-1" for="w1-email">City</label>
											<div class="col-sm-9">
												<div class="col-lg-12">
													<div class="input-group">
														<span class="input-group-prepend">
															<span class="input-group-text">
																<i class="fas fa-city"></i>
															</span>
														</span>
															<input type="text" asp-for="CompanyCity" class="form-control" />
													</div>
												</div>
											</div>
										</div>
										<div class="form-group row ">
											<label class="col-sm-3 control-label text-sm-right pt-1" for="w1-last-name">GSTIN</label>
											<div class="col-sm-9">

												<div class="col-lg-12">
													<div class="input-group">
														<span class="input-group-prepend">
															<span class="input-group-text">
																<i class="fas fa-city"></i>
															</span>
														</span>
															<input type="text" asp-for="CompanyGstinNo" class="form-control" />

													</div>
												</div>



											</div>
										</div>

									</div>


								</div>
							</div>
						</div>
						<div class="card-footer">
							<input type="submit" value="submit" class="btn btn-warning mt-2 float-right" />
							@* <asp:Button ID="Button1" runat="server" Text="Submit" OnClick="Button1_Click" class="btn btn-warning mt-2 float-right" /> *@
						</div>
					</section>
				</div>

			</div>

			</form>

			<!-- end: page -->
		</section>
	</div>

	 

</section>
