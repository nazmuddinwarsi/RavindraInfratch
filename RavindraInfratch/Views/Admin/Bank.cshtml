@* @model RohatasTransportCore.Models.test *@
@model RavindraInfratch.Models.BankModel

@{
	ViewBag.Title = "Bank List";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<section class="body">

	<!-- start: header -->
	<header class="header">
		@* <uc1:AdminHeader ID="AdminHeader1" runat="server" /> *@
		@Html.Partial("_AdminHeader")
		<!-- start: search & user box -->
		<!-- end: search & user box -->
	</header>
	<!-- end: header -->

	<div class="inner-wrapper">
		<!-- start: sidebar -->
		@* @{
		Html.RenderPartial("_AdminMenu");
		} *@
		@Html.Partial("_AdminMenu")
		<!-- end: sidebar -->
		<div>

			<!-- Modal Basic -->
			<!-- Modal Bootstrap -->

		</div>

		<section role="main" class="content-body card-margin">


			<!-- start: page -->


			<div class="row">
				<div class="col-lg-6">
					<section class="card form-wizard" id="w1">
						<header class="card-header">
							<div class="card-actions">
								<a href="#" class="card-action card-action-toggle" data-card-toggle></a>
								<a href="#" class="card-action card-action-dismiss" data-card-dismiss></a>
							</div>

							<h2 class="card-title">Add Bank Details</h2>

						</header>
						<form method="post" action="ExpenseType">
							<div class="card-body card-body-nopadding">

								<div class="form-horizontal" novalidate="novalidate">
									<div>

										<div id="w1-account" class="tab-pane p-3 ">
											<div class="form-group row">

												<label class="col-sm-3 control-label text-sm-right pt-1" for="w1-email">Display Name</label>
												<div class="col-sm-9">
													<div class="col-lg-12">
														<div class="input-group">
															@* 	@Html.DisplayNameFor(model => model.State1)
															@Html.TextBoxFor(m => m.state, new { @class = "form-control form-control-lg" })
															*@
															<input name="fldName" type="text" asp-for="BankOne.Display" class="form-control" placeholder="Enter Display Name" />

														</div>
													</div>
												</div>
											</div>
											<div class="form-group row">

												<label class="col-sm-3 control-label text-sm-right pt-1" for="w1-email">Account Name</label>
												<div class="col-sm-9">
													<div class="col-lg-12">
														<div class="input-group">
															@* 	@Html.DisplayNameFor(model => model.State1)
															@Html.TextBoxFor(m => m.state, new { @class = "form-control form-control-lg" })
															*@
															<input name="fldName" type="text" asp-for="BankOne.AccountName" class="form-control" placeholder="Enter Account Name" />

														</div>
													</div>
												</div>
											</div>
											<div class="form-group row">

												<label class="col-sm-3 control-label text-sm-right pt-1" for="w1-email">Account No.</label>
												<div class="col-sm-9">
													<div class="col-lg-12">
														<div class="input-group">
															@* 	@Html.DisplayNameFor(model => model.State1)
															@Html.TextBoxFor(m => m.state, new { @class = "form-control form-control-lg" })
															*@
															<input name="fldName" type="text" asp-for="BankOne.AccountNo" class="form-control" placeholder="Enter Account No." />

														</div>
													</div>
												</div>
											</div>
											<div class="form-group row">

												<label class="col-sm-3 control-label text-sm-right pt-1" for="w1-email">Bank Name</label>
												<div class="col-sm-9">
													<div class="col-lg-12">
														<div class="input-group">
															@* 	@Html.DisplayNameFor(model => model.State1)
															@Html.TextBoxFor(m => m.state, new { @class = "form-control form-control-lg" })
															*@
															<input name="fldName" type="text" asp-for="BankOne.BankName" class="form-control" placeholder="Enter Bank Name" />

														</div>
													</div>
												</div>
											</div>
											<div class="form-group row">

												<label class="col-sm-3 control-label text-sm-right pt-1" for="w1-email">Branch Name</label>
												<div class="col-sm-9">
													<div class="col-lg-12">
														<div class="input-group">
															@* 	@Html.DisplayNameFor(model => model.State1)
															@Html.TextBoxFor(m => m.state, new { @class = "form-control form-control-lg" })
															*@
															<input name="fldName" type="text" asp-for="BankOne.Branch" class="form-control" placeholder="Enter Branch Name" />

														</div>
													</div>
												</div>
											</div>
										</div>


									</div>
								</div>
							</div>
							<div class="card-footer">
								<button class="btn btn-warning mt-2 float-right">Submit</button>
								@* <input type="submit"   value="Submit"  class="btn btn-warning mt-2 float-right" /> *@

							</div>
						</form>
					</section>
				</div>
				<div class="col-lg-6">
					<section class="card form-wizard" id="w1">
						<header class="card-header">
							<div class="card-actions">
								<a href="#" class="card-action card-action-toggle" data-card-toggle></a>
								<a href="#" class="card-action card-action-dismiss" data-card-dismiss></a>
							</div>

							<h2 class="card-title">Bank List</h2>
						</header>
						<div class="card-body card-body-nopadding">
							<div id="w1-account" class="tab-pane p-3 ">
								<div>
									<table cellspacing="0" rules="all" class="table table-bordered table-striped mb-0" border="1" id="grd" style="border-collapse:collapse;">
										<thead>
											<tr class="headerStyle">
												<th scope="col">DisplayName</th>
												<th scope="col">AccountName</th>
												<th scope="col">AccountNo</th>
												<th scope="col">BankName</th>
												<th scope="col">BranchName</th>

												<th align="center" scope="col" style="width:50px;">Delete</th>
											</tr>
										</thead>
										<tbody>
											@* @if (Model!= null && Model.StateLists) *@
											@* @Model.stateLists = new  *@

											@foreach (var Bank in Model.BankList)
											{
												var moid = "modal" + Bank.Id;
												<tr class="rowStyle">
													<td style="white-space:nowrap;">@Bank.Display</td>
													<td style="white-space:nowrap;">@Bank.AccountName</td>
													<td style="white-space:nowrap;">@Bank.AccountNo</td>
													<td style="white-space: nowrap">@Bank.BankName</td>
													<td style="white-space:nowrap;">@Bank.Branch</td>
													
													<td align="center">

														<a class="mb-1 mt-1 mr-1 modal-basic btn btn-default" href="#@moid"><img src="../images/img_delete.png" /></a>


													</td>
												</tr>
												<div id="@moid" class="modal-block mfp-hide">
													<section class="card">
														<header class="card-header">
															<h2 class="card-title">Are you sure?</h2>
														</header>
														<div class="card-body">
															<div class="modal-wrapper">
																<div class="modal-text">
																	<p class="mb-0">Are you sure that you want to delete this data?</p>
																</div>
															</div>
														</div>
														<footer class="card-footer">
															<div class="row">
																<div class="col-md-12 text-right">
																	<a asp-controller="Admin" asp-action="ExpenseDel" class="btn btn-primary" asp-route-id="@Bank.Id">Confirm</a>

																	<button class="btn btn-default modal-dismiss">Cancel</button>
																</div>
															</div>
														</footer>
													</section>
												</div>
											}


										</tbody>
										<tfoot>
										</tfoot>
									</table>
								</div>
							</div>
						</div>

					</section>
				</div>
			</div>
			<!-- end: page -->
		</section>
	</div>


</section>