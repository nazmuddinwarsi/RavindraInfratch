		<section role="main" class="content-body card-margin">


			<!-- start: page -->


			<div class="row">
				<div class="col-lg-6">
					<section class="card form-wizard" id="w1">
						<header class="card-header">
							<div class="card-actions">
								<a href="#" class="card-action card-action-toggle" data-card-toggle></a>
								<a href="#" class="card-action card-action-dismiss" data-card-dismiss></a>
							</div>

							<h2 class="card-title">Add Plots</h2>

						</header>
						<form method="post" action="PlotList">
							<div class="card-body card-body-nopadding">

								<div class="form-horizontal" novalidate="novalidate">
									
									<div>
										
										<div id="w1-account" class="tab-pane p-3 ">
											<div class="form-group row">
												<label class="col-sm-3 control-label text-sm-right pt-1" for="w1-last-name">Project Name</label>
												<div class="col-sm-9">

													<div class="col-lg-12">
														<div class="input-group">
															<span class="input-group-prepend">
																<span class="input-group-text">
																	<i class="fas fa-user"></i>
																</span>
															</span>
															@* <asp:DropDownList ID="DrpSponsor" runat="server" data-plugin-selectTwo class="form-control populate">

															</asp:DropDownList> *@

															<select asp-for="Projectid" data-plugin-selectTwo class="form-control populate" asp-items="@Model.ProjectList">
