@model RavindraInfratch.Models.StateViewModel
@{
	ViewBag.Title = "State List | Ravindra Infratech Limited";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<section class="body">

	<!-- start: header -->
	<header class="header">

		@Html.Partial("_AdminHeader")

	</header>
	<!-- end: header -->

	<div class="inner-wrapper">
		<!-- start: sidebar -->
		@Html.Partial("_AdminMenu")
		<!-- end: sidebar -->

		<section role="main" class="content-body card-margin">


			<!-- start: page -->


			<div class="row">
				<div class="col-lg-6">
					<section class="card form-wizard" id="w1">
						<header class="card-header">
							<div class="card-actions">
								<a href="#" class="card-action card-action-toggle" data-card-toggle></a>
								<a href="#" class="card-action card-action-dismiss" data-card-dismiss></a>
							</div>

							<h2 class="card-title">State</h2>

						</header>
						<form method="post" action="StateList">
							<div class="card-body card-body-nopadding">

								<div class="form-horizontal" novalidate="novalidate">
									<div>

										<div id="w1-account" class="tab-pane p-3 ">
											<div class="form-group row">

												<label class="col-sm-3 control-label text-sm-right pt-1" for="w1-email">State Name</label>
												<div class="col-sm-9">
													<div class="col-lg-12">
														<div class="input-group">
															@* 	@Html.DisplayNameFor(model => model.State1)
															@Html.TextBoxFor(m => m.state, new { @class = "form-control form-control-lg" })
															*@
															<input name="State1" type="text" asp-for="StateOne.State1" class="form-control" placeholder="Enter State Name" />

														</div>
													</div>
												</div>
											</div>
											<div class="form-group row">

												<label class="col-sm-3 control-label text-sm-right pt-1" for="w1-email">State Code</label>
												<div class="col-sm-9">
													<div class="col-lg-12">
														<div class="input-group">


															<input name="StateCode" type="text" asp-for="StateOne.StateCode" class="form-control" placeholder="Enter State Code" />

														</div>
													</div>
												</div>
											</div>

										</div>


									</div>
								</div>
							</div>
							<div class="card-footer">
								<button class="btn btn-warning mt-2 float-right">Submit</button>
								@* <input type="submit"   value="Submit"  class="btn btn-warning mt-2 float-right" /> *@

							</div>
						</form>
					</section>
				</div>
				<div class="col-lg-6">
					<section class="card form-wizard" id="w1">
						<header class="card-header">
							<div class="card-actions">
								<a href="#" class="card-action card-action-toggle" data-card-toggle></a>
								<a href="#" class="card-action card-action-dismiss" data-card-dismiss></a>
							</div>

							<h2 class="card-title">State List</h2>
						</header>
						<div class="card-body card-body-nopadding">
							<div id="w1-account" class="tab-pane p-3 ">
								<div>
									<table cellspacing="0" rules="all" class="table table-bordered table-striped mb-0" border="1" id="grd" style="border-collapse:collapse;">
										<thead>
											<tr class="headerStyle">
												<th scope="col">State</th>
												<th scope="col">StateCode</th>
												<th align="center" scope="col" style="width:50px;">Delete</th>
											</tr>
										</thead>
										<tbody>
											@* @if (Model!= null && Model.StateLists) *@
											@* @Model.stateLists = new  *@

											@foreach (var StateList in Model.StateLists)
											{
												var moid = "modal" + StateList.Id;
												<tr class="rowStyle">
													<td style="white-space:nowrap;">@StateList.State1</td>
													<td style="white-space:nowrap;">@StateList.StateCode</td>
													<td align="center">

														<a class="mb-1 mt-1 mr-1 modal-basic btn btn-default" href="#@moid"><img src="../images/img_delete.png" /></a>


													</td>
												</tr>
												<div id="@moid" class="modal-block mfp-hide">
													<section class="card">
														<header class="card-header">
															<h2 class="card-title">Are you sure?</h2>
														</header>
														<div class="card-body">
															<div class="modal-wrapper">
																<div class="modal-text">
																	<p class="mb-0">Are you sure that you want to delete this data?</p>
																</div>
															</div>
														</div>
														<footer class="card-footer">
															<div class="row">
																<div class="col-md-12 text-right">
																	<a asp-controller="Admin" asp-action="StateDel" class="btn btn-primary" asp-route-id="@StateList.Id">Confirm</a>

																	<button class="btn btn-default modal-dismiss">Cancel</button>
																</div>
															</div>
														</footer>
													</section>
												</div>
											}


										</tbody>
										<tfoot>
										</tfoot>
									</table>
								</div>
							</div>
						</div>

					</section>
				</div>
			</div>
			<!-- end: page -->
		</section>
	</div>

 
</section>